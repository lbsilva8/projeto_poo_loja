<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<SplitPane dividerPositions="0.4" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GerenciarPermissoesViewController">
    <items>
        <VBox spacing="5.0">
            <children>
                <Label text="Selecionar Usuário">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Label>
                <ListView fx:id="listaUsuarios" VBox.vgrow="ALWAYS" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
        <AnchorPane>
            <children>
                <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <children>
                        <Label text="Permissões do Usuário Selecionado">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <VBox fx:id="painelPermissoesVBox" spacing="8.0" />
                        <Button fx:id="salvarButton" disable="true" onAction="#handleSalvarPermissoes" text="Salvar Permissões" />
                        <Label fx:id="statusLabel" />
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </items>
</SplitPane>